/* pages/beauty/beauty.wxss */

.bg {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.result {
    position: fixed;
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    padding-left: 50rpx;
    bottom: 35rpx;
    left: 50rpx;
    width: 300rpx;
    height: 210rpx;
    border-radius: 20rpx;
    background: rgba(255, 255, 255, 0.9);
    color: #495057;
    font-size: 32rpx;
}

.result text {
    margin-bottom: 5rpx;
}

.confirm {
    position: fixed;
    bottom: 120rpx;
    right: 60rpx;
    width: 200rpx;
    height: 100rpx;
    border-radius: 20rpx;
    background: rgb(47, 185, 116);
    color: #ffffff;
    font-size: 38rpx;
}

.controls {
    position: fixed;
    bottom: 0;
    width: 100%;
    margin-bottom: 60rpx;
}

.remind {
    position: relative;
    background-color: rgba(255, 255, 255, .8);
    font-size: 24rpx;
    width: 400rpx;
    margin: 0 auto;
    text-align: center;
    border-radius: 20rpx;
    padding: 20rpx;
    margin-bottom: 40rpx;
    animation: mymove 0.8s infinite;
}

@keyframes mymove {
    from {
        transform: translateY(-30rpx);
    }
    30% {
        transform: translateY(0);
    }
    to {
        transform: translateY(-30rpx);
    }
}

.remind::after {
    position: absolute;
    top: 80rpx;
    content: "";
    width: 0;
    height: 0;
    border: 8px solid transparent;
    border-top-color: rgba(255, 255, 255, .8);
    left: 195rpx;
}

.but {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 260rpx;
    height: 200rpx;
    padding: 5rpx 50rpx;
    border-radius: 50rpx;
    background: rgba(204, 204, 204, 0.7);
    color: #141c1a;
}

